<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="官方示例"
        android:onClick="gotoGoogleScrolling"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义"
        android:onClick="gotoCustomScrolling"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义 - Parallax"
        android:textAllCaps="false"
        android:onClick="gotoCustomScrollingParallax"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义 - TitleBar"
        android:textAllCaps="false"
        android:onClick="gotoCustomTitleBar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MoveView"
        android:textAllCaps="false"
        android:onClick="gotoMoveView"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScrollView"
        android:textAllCaps="false"
        android:onClick="gotoScrollView"/>
</LinearLayout>