<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teaphy.coordinatorlayoutcrawler">

    <application
        android:name=".application.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoordinatorlayoutCrawler">
        <activity android:name=".scroller_view.ScrollViewActivity" />
        <activity android:name=".move_view.MoveViewActivity" />
        <activity
            android:name=".custom.CustomScrollingActivity"
            android:theme="@style/Theme.CoordinatorlayoutCrawler.NoActionBar" />


        <activity
            android:name=".custom.CustomScrollingParallaxActivity"
            android:theme="@style/Theme.CoordinatorlayoutCrawler.NoActionBar" />


        <activity
            android:name=".custom.CustomTitleBarActivity"
            android:theme="@style/Theme.CoordinatorlayoutCrawler.NoActionBar" />


        <activity
            android:name=".google.GoogleScrollingActivity"
            android:label="@string/title_activity_google_scrolling"
            android:theme="@style/Theme.CoordinatorlayoutCrawler.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>